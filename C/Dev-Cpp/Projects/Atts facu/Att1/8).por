programa
{
	
	funcao inicio()
	{
		real peso_k, peso_g
		
		escreva(" Informe o peso: ")
		leia(peso_k)

		peso_g = peso_k * 1000

		
		escreva(" Seu peso em gramas e: ", peso_g)
	}
}
