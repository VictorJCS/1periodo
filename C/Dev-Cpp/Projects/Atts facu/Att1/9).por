programa
{
	
	funcao inicio()
	{
	real base_maior, base_menor, altura, area
	
	escreva(" Informe a base maior: ")
	leia(base_maior)

	escreva(" Informe a base menor: ")
	leia(base_menor)

	escreva(" Informe a base altura: ")
	leia(altura)

	area = ((base_maior + base_menor) * altura) / 2
	
	escreva(" A area do trapezio e: ", area)
	}
}
