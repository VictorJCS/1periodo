programa
{
	
	funcao inicio()
	{
		real base_ma, base_me,altura, area
		escreva(" Informe a base maior: ")
		leia(base_ma)
		escreva(" Informe a base menor: ")
		leia(base_me)
		escreva(" Informe a altura: ")
		leia(altura)
		
		area = ((base_ma + base_me) * altura) / 2 

		escreva(" A area do trapezio e: ", area)
		
	}
}
